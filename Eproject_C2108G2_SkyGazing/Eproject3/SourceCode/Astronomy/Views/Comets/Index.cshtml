@model IEnumerable<Astronomy.Models.Comet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" type="text/css" href="~/Content/News.css">
}
@{
    List<Astronomy.Models.ImageOfComet> images = ViewBag.Images;
}

<div class="link">
    <div class="link-container">
        <!--Tiêu đề tin tức-->
        <div class="news-title">
        </div>


        @foreach (Astronomy.Models.Comet item in Model)
        {
            <div class="link-item">
                <!--Ảnh-->
                <div class="link-img">
                    @for (int i = 0; i < images.Count; i++)
                    {
                        if (images[i].CometID == item.CometID)
                        {
                            <img src="@Url.Content(images[i].Image)" />
                            break;
                        }
                    }
                </div>
                <!--Tiêu đề-->
                <div class="link-title">
                    <h3>@Html.DisplayFor(modelItem => item.CometName)</h3>
                    @{
                        string name = item.CometName + " Fact ->";
                    }
                    @Html.ActionLink(name, "Details", new { id = item.CometID })
                </div>
            </div>
        }
    </div>
</div>