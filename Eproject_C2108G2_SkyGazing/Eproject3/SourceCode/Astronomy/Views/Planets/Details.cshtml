@model Astronomy.Models.Planet

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
    <link href="~/Content/details.css" rel="stylesheet" />
}

<!--Title-->
<header>
    <h1>@Html.DisplayFor(model=>model.PlanetName)</h1>
</header>
<!--Deatils-->

<div class="main">
    <div class="container">
        <section class="description">
            <!--Image-->
            <div class="image">
                @foreach (Astronomy.Models.ImageOfPlanet image in ViewBag.Image)
                {
                    if(image.PlanetID == Model.PlanetID)
                    {
                        <img src="@Url.Content(image.Image)" />
                    }
                    
                }
            </div>
            <!--Định nghĩa hành tinh, sao chổi-->
            <article class="content">
                @Html.DisplayFor(model => model.Description)
            </article>
        </section>

        <!--Thông tin nhanh-->
        <aside class="quick">
            <!--Div này là 1 phần thông tin nhanh. VD: Khám phá-->
            <div class="quick-item">
                <div class="quick-title">
                    <h3>Khám phá</h3>
                </div>
                <div class="quick-content">
                    <p>@Html.DisplayNameFor(model => model.RecordedBy) : @Html.DisplayFor(model => model.RecordedBy)</p>
                    <br />
                    <p>@Html.DisplayNameFor(model => model.FirstRecord) : @Html.DisplayFor(model => model.FirstRecord)</p>
                    <br />
                    <p>@Html.DisplayNameFor(model => model.SurfaceTemperature) : @Html.DisplayFor(model => model.SurfaceTemperature)</p>
                    <br />
                    <p>@Html.DisplayNameFor(model => model.OrbitPeriod) : @Html.DisplayFor(model => model.OrbitPeriod)</p>
                    <br />
                    <p>@Html.DisplayNameFor(model => model.OrbitDistance) : @Html.DisplayFor(model => model.OrbitDistance)</p>
                    <br />
                    <p>@Html.DisplayNameFor(model => model.Rings) : @Html.DisplayFor(model => model.Rings)</p>
                    <br />
                    <p>@Html.DisplayNameFor(model => model.NotableMoons) : @Html.DisplayFor(model => model.NotableMoons)</p>
                    <br />
                    <p>@Html.DisplayNameFor(model => model.KnownMoons) : @Html.DisplayFor(model => model.KnownMoons)</p>
                    <br />
                    <p>@Html.DisplayNameFor(model => model.atmosphere) : @Html.DisplayFor(model => model.atmosphere)</p>
                    <br />

                </div>
            </div>
        </aside>
    </div>
</div>
<!--Feedback-->
<div class="feedback">
    <div class="feedback-container">

        <div class="feedback-title">
            <h2>Feedback</h2>
        </div>
        <div>
            <form action="@Url.Action("AddFeedback", "Planets")" method="post" id="feedback">
                <input type="hidden" name="PlanetID" value="@Model.PlanetID" />
                <input type="hidden" name="Date" value="@DateTime.Now" />
                <input type="hidden" name="Status" value="true" />

                <div class="form-group">
                    <div class="name">
                        <label>Name: </label>
                        <input type="text" name="Name" placeholder="Name" required />
                    </div>
                    <div class="email">
                        <label>Email: </label>
                        <input type="email" name="Email" placeholder="Email" required />
                    </div>
                </div>

                <div class="des">
                    Description:
                    <textarea form="feedback" name="Description" rows="4" cols="450"></textarea>
                </div>
                <button type="submit">submit</button>
            </form>
        </div>
        <div class="feedback-content">
            @foreach (Astronomy.Models.FeedbacktoPlanet item in ViewBag.feedback)
            {
                <h4>@item.Name</h4>
                <p>@item.Date</p>
                <p>@item.Description</p>
            }
        </div>
    </div>
</div>
<!--Link-->
@{ 
    int i = 0;
}
<div class="link">
    <div class="link-container">
        <!--Tiêu đề tin tức-->
        @foreach (Astronomy.Models.Planet item in ViewBag.link)
        {
            i++;
            if (i == 3)
            {
                break;
            }
            <div class="link-item">
                <!--Ảnh-->
                <div class="link-img">
                    @foreach (Astronomy.Models.ImageOfPlanet image in ViewBag.Image)
                    {
                        if (image.PlanetID == item.PlanetID)
                        {
                            <img src="@Url.Content(image.Image)" />
                            break;
                        }

                    }
                </div>
                <!--Tiêu đề-->
                <div class="link-title">
                    <h3>@Html.DisplayFor(modelItem => item.PlanetName)</h3>
                    @{
                        string name = item.PlanetName + " Fact ->";
                    }
                    @Html.ActionLink(name, "Details", new { id = item.PlanetID })
                </div>
            </div>
        }
    </div>
</div>

