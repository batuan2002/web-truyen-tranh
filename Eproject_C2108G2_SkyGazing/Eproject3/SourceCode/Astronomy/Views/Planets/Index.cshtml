@model IEnumerable<Astronomy.Models.Planet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" type="text/css" href="~/Content/News.css">
}
@{ 
    List<Astronomy.Models.ImageOfPlanet> images = ViewBag.Images;
}

<div class="link">
    <div class="link-container">
        <!--Tiêu đề tin tức-->
        <div class="news-title">
            <h3>The Planets is an encyclopedic overview with facts and information about mythology and current scientific knowledge of the planets, moons, and other objects in our solar system and beyond.</h3>
        </div>


        @foreach (Astronomy.Models.Planet item in Model)
        {
            <div class="link-item">
                <!--Ảnh-->
                <div class="link-img">    
               @for(int i = 0;i < images.Count;i++)
                {
                    if(images[i].PlanetID == item.PlanetID)
                    {
                        <img src="@Url.Content(images[i].Image)" style="width:100%"/>
                           break;
                    }
                }    
                </div>
                <!--Tiêu đề-->
                <div class="link-title">
                    <h3>@Html.DisplayFor(modelItem => item.PlanetName)</h3>
                    @{ 
                        string name = item.PlanetName + " Fact ->";
                    }
                    @Html.ActionLink(name, "Details", new { id = item.PlanetID })
                </div>
            </div>
        }
    </div>
</div>